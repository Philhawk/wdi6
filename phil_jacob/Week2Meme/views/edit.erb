<h1> Edit meme </h1>

<form method="post" action="/funnymemes/ <%= @funnymemes['id'] %>">
<label for="title">Title:</label>
<input id="title" name="title" placeholder="Meme Title" >

<label for="description">Description:</label>
<input id="description" name="description" value="<%= @funnymemes['description'] %>" placeholder="Meme description">

<label for="url">URL:</label>
<input id="url" name="url" placeholder="Paste URL link here" value="<%= @funnymemes['url'] %>">

<label for="genre">Genre:</label>
<input id="genre" name="genre" placeholder="Meme genre" value="<%= @funnymemes['genre'] %>">

<button> Edit Meme </button>
</form>